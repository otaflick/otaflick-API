<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Users - Admin Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .header h1 {
            color: white;
            font-size: 2.5rem;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .header p {
            color: rgba(255,255,255,0.8);
            font-size: 1.1rem;
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            text-align: center;
            transition: transform 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-5px);
        }

        .stat-card.online {
            border-top: 4px solid #4CAF50;
        }

        .stat-card.total {
            border-top: 4px solid #2196F3;
        }

        .stat-card.offline {
            border-top: 4px solid #FF9800;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .stat-card.online .stat-number {
            color: #4CAF50;
        }

        .stat-card.total .stat-number {
            color: #2196F3;
        }

        .stat-card.offline .stat-number {
            color: #FF9800;
        }

        .stat-label {
            color: #666;
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .users-container {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }

        .users-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }

        .users-header h2 {
            color: #333;
            font-size: 1.5rem;
        }

        .refresh-btn {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 25px;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .refresh-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

        .users-list {
            display: grid;
            gap: 15px;
        }

        .user-card {
            display: flex;
            align-items: center;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 10px;
            border-left: 4px solid #4CAF50;
            transition: all 0.3s ease;
        }

        .user-card:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
            margin-right: 15px;
        }

        .user-info {
            flex: 1;
        }

        .username {
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
            font-size: 1.1rem;
        }

        .user-meta {
            display: flex;
            gap: 15px;
            font-size: 0.85rem;
            color: #666;
        }

        .online-status {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            background: #4CAF50;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }

        .push-enabled {
            color: #4CAF50;
            font-weight: 500;
        }

        .join-date {
            color: #666;
        }

        .no-users {
            text-align: center;
            padding: 60px 40px;
            color: #666;
        }

        .no-users-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .no-users h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
            color: #333;
        }

        .no-users p {
            font-size: 1rem;
            opacity: 0.7;
        }

        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-top: 30px;
            padding: 12px 24px;
            background: #6c757d;
            color: white;
            text-decoration: none;
            border-radius: 25px;
            transition: all 0.3s ease;
            font-size: 14px;
        }

        .back-btn:hover {
            background: #5a6268;
            transform: translateY(-2px);
            text-decoration: none;
            color: white;
        }

        /* Real-time update indicator */
        .live-indicator {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #4CAF50;
            font-size: 0.8rem;
            margin-top: 10px;
        }

        .live-dot {
            width: 6px;
            height: 6px;
            background: #4CAF50;
            border-radius: 50%;
            animation: pulse 1.5s infinite;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            .stats-container {
                grid-template-columns: 1fr;
            }
            
            .users-header {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }
            
            .user-card {
                flex-direction: column;
                text-align: center;
                padding: 15px;
            }
            
            .user-avatar {
                margin-right: 0;
                margin-bottom: 10px;
            }
            
            .user-meta {
                justify-content: center;
                flex-wrap: wrap;
            }

            .header h1 {
                font-size: 2rem;
            }

            .users-container {
                padding: 20px;
            }
        }

        @media (max-width: 480px) {
            body {
                padding: 10px;
            }
            
            .stat-card {
                padding: 20px;
            }
            
            .stat-number {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üü¢ Online Users</h1>
            <p>Real-time monitoring of active users</p>
            <div class="live-indicator">
                <div class="live-dot"></div>
                <span>LIVE - Auto updates every 30 seconds</span>
            </div>
        </div>

        <div class="stats-container">
            <div class="stat-card online">
                <div class="stat-number" id="onlineCount">{{onlineUsersCount}}</div>
                <div class="stat-label">Online Now</div>
            </div>
            <div class="stat-card total">
                <div class="stat-number">{{totalUsers}}</div>
                <div class="stat-label">Total Users</div>
            </div>
            <div class="stat-card offline">
                <div class="stat-number">{{offlineUsersCount}}</div>
                <div class="stat-label">Offline Users</div>
            </div>
        </div>

        <div class="users-container">
            <div class="users-header">
                <h2>Currently Online Users ({{onlineUsersCount}})</h2>
                <button class="refresh-btn" onclick="refreshPage()">
                    üîÑ Refresh Now
                </button>
            </div>

            <div class="users-list" id="usersList">
                {{#if onlineUsers.length}}
                    {{#each onlineUsers}}
                    <div class="user-card">
                        <div class="user-avatar">
                            {{#if this.username}}
                                {{substr this.username 0 1}}
                            {{else}}
                                U
                            {{/if}}
                        </div>
                        <div class="user-info">
                            <div class="username">{{this.username}}</div>
                            <div class="user-meta">
                                <div class="online-status">
                                    <div class="status-dot"></div>
                                    <span>Online</span>
                                </div>
                                <div class="join-date">
                                    Joined: {{formatDate this.createdAt}}
                                </div>
                                {{#if this.expoPushToken}}
                                <div class="push-enabled">
                                    üì± Push Enabled
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                {{else}}
                    <div class="no-users">
                        <div class="no-users-icon">üë•</div>
                        <h3>No Users Online</h3>
                        <p>There are currently no active users on the platform.</p>
                    </div>
                {{/if}}
            </div>
        </div>

        <div style="text-align: center; margin-top: 30px;">
            <a href="/" class="back-btn">‚Üê Back to Dashboard</a>
        </div>
    </div>

    <script>
        // Refresh the entire page
        function refreshPage() {
            location.reload();
        }

        // Auto-refresh every 30 seconds
        setInterval(() => {
            refreshPage();
        }, 30000);

        // Update online count in real-time without refreshing page
        async function updateOnlineCount() {
            try {
                const response = await fetch('/online-users-count');
                const data = await response.json();
                if (data.success) {
                    // Update the online count in the stat card
                    const onlineCountElement = document.getElementById('onlineCount');
                    if (onlineCountElement) {
                        onlineCountElement.textContent = data.onlineUsersCount;
                    }
                    
                    // Update the header count
                    const headerCount = document.querySelector('.users-header h2');
                    if (headerCount) {
                        headerCount.textContent = `Currently Online Users (${data.onlineUsersCount})`;
                    }

                    console.log('Online count updated:', data.onlineUsersCount);
                }
            } catch (error) {
                console.error('Error updating online count:', error);
            }
        }

        // Update count every 10 seconds
        setInterval(updateOnlineCount, 10000);

        // Add some visual feedback when page is about to refresh
        let refreshCountdown = 30;
        setInterval(() => {
            refreshCountdown--;
            if (refreshCountdown <= 5) {
                const refreshBtn = document.querySelector('.refresh-btn');
                if (refreshBtn) {
                    refreshBtn.textContent = `üîÑ Refreshing in ${refreshCountdown}s`;
                }
            }
            if (refreshCountdown === 0) {
                refreshCountdown = 30;
            }
        }, 1000);

        // Initial call to update count
        updateOnlineCount();
    </script>
</body>
</html>